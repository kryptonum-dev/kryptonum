---
export const slugPrefix = '/pl/'

import Layout from '@/src/layouts/Layout.astro'
import sanityFetch from '@/utils/sanity.fetch'
import metadataFetch from '@/utils/metadata.fetch'
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro'
import Components, { Components_Query, type ComponentsProps } from '@/components/Components.astro'

export async function getStaticPaths() {
  const pages = await sanityFetch<{ slug: string }[]>({
    query: `
      *[_type == 'Service_Collection'][] {
        "slug": slug.current,
      }
    `,
  })
  return pages?.map(({ slug }) => ({ params: { serviceSlug: slug.replace(slugPrefix, '') } }))
}

const { serviceSlug } = Astro.params
const slug = `${slugPrefix}${serviceSlug}`

const page = await sanityFetch<{
  name: string
  mainPage: {
    name: string
    slug: string
  }
  components: ComponentsProps
}>({
  query: `
    *[_type == 'Service_Collection' && slug.current == $slug][0] {
      name,
      mainPage -> {
        name,
        "slug": slug.current,
      },
      ${Components_Query}
    }
  `,
  params: { slug: slug },
})
if (!page) return Astro.rewrite('/404')

const metadata = await metadataFetch('Service_Collection', slug)
---

<Layout {...metadata}>
  <Breadcrumbs
    data={[
      ...(page.mainPage ? [{ name: page.mainPage.name, path: page.mainPage.slug }] : []),
      { name: page.name, path: slug },
    ]}
  />
  <Components data={page.components} />
</Layout>
