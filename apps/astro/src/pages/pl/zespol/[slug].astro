---
export const slugPrefix = '/pl/zespol/'

import Layout from '@/src/layouts/Layout.astro'
import sanityFetch from '@/utils/sanity.fetch'
import metadataFetch from '@/utils/metadata.fetch'
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro'
import Components, { Components_Query, type ComponentsProps } from '@/components/Components.astro'

export const pages = await sanityFetch<{ slug: string }[]>({
  query: `
    *[_type == 'TeamMember_Collection'][] {
      "slug": slug.current,
    }
  `,
})
export async function getStaticPaths() {
  return pages?.map(({ slug }) => ({ params: { slug: slug.replace(slugPrefix, '') } }))
}

const { slug: _slug } = Astro.params
const slug = `${slugPrefix}${_slug}`

if (!pages.find(({ slug }) => slug === slug)) return Astro.rewrite('/404')

const page = await sanityFetch<{
  name: string
  components: ComponentsProps
}>({
  query: `
    *[_type == 'TeamMember_Collection' && slug.current == $slug][0] {
      name,
      ${Components_Query}
    }
  `,
  params: { slug: slug },
})
if (!page) return Astro.rewrite('/404')

const metadata = await metadataFetch('TeamMember_Collection', slug)
---

<Layout {...metadata}>
  <Breadcrumbs
    data={[
      { name: 'Zespół', path: '/pl/zespol' },
      { name: page.name, path: slug },
    ]}
  />
  <Components data={page.components} />
</Layout>
