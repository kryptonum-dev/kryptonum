---
export const prerender = false

import { DOMAIN } from '@/src/global/constants'
import sanityFetch from '@repo/utils/sanity.fetch'
import Layout from '@/src/layouts/Layout.astro'
import type { HeadProps } from '@/src/layouts/Head.astro'
import Image, { ImageDataQuery, type ImageDataProps } from '@/components/ui/image'
import PortableText, { PortableTextQuery, type PortableTextValue } from '@/components/ui/portable-text'
import Copy from '@/components/ui/Copy.astro'
import Socials from '@/components/ui/Socials.astro'

const URL = 'https://l.kryptonum.eu'

const host = Astro.request.headers.get('host')
if (!host?.includes(URL.replace('https://', ''))) {
  return new Response(null, { status: 404 })
}

const page = await sanityFetch<{
  seo: Omit<HeadProps, 'path'>
  heading: PortableTextValue
  homepageTitle: string
  services: {
    title: string
    items: {
      name: string
      slug: string
    }[]
  }
  pages: {
    title: string
    portfolio: {
      title: string
      slug: string
      thumbnails: {
        img: ImageDataProps
      }[]
      leftCount: number
    }
    team: {
      title: string
      slug: string
      avatars: {
        img: ImageDataProps
      }[]
    }
    blog: {
      title: string
      slug: string
      thumbnails: {
        img: ImageDataProps
      }[]
      leftCount: number
    }
  }
  contact: {
    title: string
    img: ImageDataProps
    emailText: string
    email: string
    telText: string
    tel: string
    address: {
      img: ImageDataProps
      text: string
      addressText: string
      mapLink: string
    }
    socials: {
      socialTitle: string
      socialText: string
    }
  }
}>({
  query: `
    *[_type == "Links_Page"][0] {
      "seo": {
        "title": seo.title,
        "description": seo.description,
        "openGraphImage": seo.img.asset -> url + "?w=1200",
      },
      ${PortableTextQuery('heading')}
      homepageTitle,
      services {
        title,
        items[] -> {
          name,
          "slug": slug.current,
        }
      },
      pages {
        title,
        "portfolio": {
          "title": portfolioTitle,
          "slug": *[_type == "Portfolio_Page"][0].slug.current,
          "thumbnails": *[_type == "CaseStudy_Collection"][] | order(date desc) [0...3] {
            ${ImageDataQuery('img')}
          },
          "leftCount": count(*[_type == "CaseStudy_Collection"]) - 3,
        },
        "team": {
          "title": teamTitle,
          "slug": *[_type == "Team_Page"][0].slug.current,
          "avatars": *[_type == "TeamMember_Collection"][] | order(_createdAt asc) {
            ${ImageDataQuery('img')}
          },
        },
        "blog": {
          "title": blogTitle,
          "slug": *[_type == "Blog_Page"][0].slug.current,
          "thumbnails": *[_type == "BlogPost_Collection"][] | order(coalesce(publishedDate, _createdAt) desc) [0...3] {
            ${ImageDataQuery('img')}
          },
          "leftCount": count(*[_type == "BlogPost_Collection"]) - 3,
        },
      },
      contact {
        title,
        "img": select(isReference => personReference -> ${ImageDataQuery('img')} ${ImageDataQuery('img')}),
        emailText,
        "email": coalesce(email, personReference -> email),
        telText,
        "tel": coalesce(tel, personReference -> tel),
        address {
          ${ImageDataQuery('img')}
          text,
          "addressText": coalesce(addressText, *[_type == "global"][0].address.addressText),
          "mapLink": coalesce(mapLink, *[_type == "global"][0].address.mapLink),
        },
        "socials": {
          socialTitle,
          socialText,
        },
      },
    }
  `,
})
