    align-items: center;
    justify-content: space-between;
    gap: 0.5rem 1rem;
    transition: transform 500ms var(--easing);
    position: relative;
    z-index: 2;
    .blur {
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      overflow: hidden;
      &::before {
        content: '';
        height: 100%;
        aspect-ratio: 1/1;
        background-color: var(--primary-500, #064040);
        filter: blur(32px);
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate3d(-50%, 0%, 0);
        z-index: -1;
        transition:
          opacity 800ms var(--easing),
          transform 800ms var(--easing);
        opacity: 0;
      }
    }
    &:hover,
    &:focus-visible {
      .blur {
        &::before {
          opacity: 1;
          transform: translate3d(-50%, -50%, 0);
        }
      }
    }
    &:active {
      transition: none;
      transform: scale(0.99);
      .blur {
        &::before {
          transform: translate3d(-50%, -50%, 0) scale(2);
        }
      }
    }
    &[data-link-portfolio] {
      .thumbnails {
        display: flex;
        gap: 0.25rem;
        img {
          width: 54px;
          border-radius: 0.25rem;
          border: 1px solid var(--primary-500, #064040);
        }
      }
    }
    &[data-link-team] {
      .avatars {
        display: flex;
        img {
          width: 32px;
          height: 32px;
          &:not(:first-child) {
            margin-left: -6px;
          }
        }
      }
    }
    &[data-link-blog] {
      .thumbnails {
        display: flex;
        gap: 0.25rem;
        img {
          width: 57px;
          border-radius: 0.25rem;
          border: 1px solid var(--primary-500, #064040);
        }
      }
    }
  }
  .overflowing-icon {
    display: grid;
    place-items: center;
    border-radius: 0.25rem;
    border: 1px solid var(--primary-500, #064040);
    background: var(--neutral-900, #010104);
    font-size: var(--typography-body-s, 0.75rem);
    padding: 0.34rem;
    min-width: 2rem;
    color: #2dd282;
    margin-right: -2.25rem;
  }
  .contact-wrapper {
    padding: 1.25rem;
    border-radius: 0.25rem;
    border: 1px solid var(--primary-500, #064040);
    background-color: var(--primary-900, #001414);
    display: grid;
    gap: 1.5rem;
    .label-text {
      color: var(--neutral-400, #c6cdcc);
      font-size: var(--typography-body-m, 0.875rem);
      margin-bottom: 0.34rem;
    }
    .person {
      display: grid;
      gap: 1rem;
      position: relative;
      img {
        width: clamp(2.5rem, calc(3vw / 0.48), 3rem);
        height: clamp(2.5rem, calc(3vw / 0.48), 3rem);
        position: absolute;
        right: -1.25rem;
        transform: translateX(50%);
      }
    }
    .address {
      position: relative;
      img {
        width: clamp(2.5rem, calc(3vw / 0.48), 3rem);
        height: clamp(2.5rem, calc(3vw / 0.48), 3rem);
        position: absolute;
        right: -1.25rem;
        transform: translateX(50%);
      }
      .CopyToClipboard {
        margin-top: 0.25rem;
      }
    }
    .social {
      .links {
        margin-top: 0.25rem;
      }
    }
