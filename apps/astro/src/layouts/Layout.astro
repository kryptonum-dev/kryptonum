---
import '@/global/global.scss'
import { LOCALE } from '../global/constants'
import Head, { type HeadProps } from './Head.astro'
import Header from '@/components/Layout/Header.astro'
import Footer from '@/components/Layout/Footer.astro'
import Toast from '@/components/ui/Toast/index.astro'

type Props = HeadProps & {
  clearLayout?: boolean
}

const { clearLayout = false, ...props } = Astro.props
---

<!doctype html>
<html lang={LOCALE}>
  <head>
    <Head {...props} />
    <slot name="Head" />
    <script is:inline src="https://cdn.usefathom.com/script.js" data-site="PUUZZITA" defer></script>
  </head>
  <body>
    {!clearLayout && <Header />}
    <main id="main">
      <slot />
    </main>
    {!clearLayout && <Footer />}
    <slot name="ScrollToNextPage" />
    <Toast />
  </body>
</html>
