<style lang="scss">
  [data-socials-element] {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    a {
      width: 2.75rem;
      height: 2.75rem;
      display: grid;
      place-items: center;
      transition: opacity 500ms var(--easing);
      &:hover {
        opacity: 0.8;
      }
    }
  }
</style>
