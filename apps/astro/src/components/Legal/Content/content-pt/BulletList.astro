---
// eslint-disable-next-line no-unused-vars
const { node, index, ...attrs } = Astro.props
---

<li {...attrs}>
  <slot />
</li>

<style lang="scss">
  li {
    $alignMargin: 0.38rem;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    padding-top: $alignMargin;
    &:not(:last-child) {
      margin-bottom: 0.75rem;
    }
    &::before {
      content: '';
      background: url('data:image/svg+xml;base64,')
        center / contain no-repeat;
      width: 2.5rem;
      height: 2.5rem;
      margin-top: calc($alignMargin * -1);
    }
  }
</style>
