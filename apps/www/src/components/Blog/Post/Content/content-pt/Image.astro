---
import ImageRenderer, { ImageDataQuery, type ImageDataProps } from '@repo/ui/Image'

export const Image_Query = `
  _type == "Image" => ${ImageDataQuery('@')}
`

type Props = {
  node: ImageDataProps
}

const { node } = Astro.props
---

<ImageRenderer asset={node.asset} sizes="(max-width: 69rem) 100vw, 66vw" />

<style lang="scss">
  img {
    width: 100%;
    border-radius: 0.25rem;
    border: 1px solid var(--primary-500, #064040);
    margin: clamp(2rem, calc(3vw / 0.48), 3rem) 0;
  }
</style>
