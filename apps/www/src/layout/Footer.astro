---
import sanityFetch from '@repo/utils/sanity.fetch'
import Socials from '@repo/ui/Socials.astro'
import Image, { ImageDataQuery, type ImageDataProps } from '@repo/ui/Image'
import Button, { ButtonDataQuery, type ButtonDataProps } from '@repo/ui/Button'
import Copy from '@repo/ui/Copy.astro'
import LanguageSwitcher from '@repo/ui/LanguageSwitcher.astro'
import type { Language } from '@repo/shared/languages'
import type { HeadProps } from '@repo/shared/layout/Head.astro'
import { getOtherIndexableLanguages } from '@repo/shared/language-policy'

const lang = Astro.props.lang as Language
const translations = {
  pl: {
    services: 'Usługi',
    company: 'Firma',
    contact: 'Kontakt',
    copyEmailSuccess: 'Pomyślnie skopiowano adres e-mail',
    copyTelSuccess: 'Pomyślnie skopiowano numer telefonu',
  },
  en: {
    services: 'Services',
    company: 'Company',
    contact: 'Contact',
    copyEmailSuccess: 'Successfully copied email address',
    copyTelSuccess: 'Successfully copied phone number',
  },
}
const t = translations[lang]
const alternates = Astro.props.alternates as HeadProps['alternates']

// Only show language switcher if there are other indexable languages
const shouldShowLanguageSwitcher = getOtherIndexableLanguages(lang).length > 0

const data = await sanityFetch<{
  pillars?: Array<{
    name: string
    slug: string
    description?: string
    icon: ImageDataProps
  }>
  links?: Array<{
    name: string
    slug: string
    image?: ImageDataProps
  }>
  servicesCta?: ButtonDataProps
  contact: {
    address: {
      addressText: string
      mapLink: string
    }
    email: string
    tel?: string
  }
  privacyPolicy: {
    name: string
    slug: string
  }
  terms: {
    name: string
    slug: string
  }
}>({
  query: `
    {
      "pillars": *[_type == "global" && language == $language][0].footer.pillars[]-> {
        name,
        "slug": slug.current,
        description,
        ${ImageDataQuery('icon')}
      },
      "links": *[_type == "global" && language == $language][0].footer.links[] {
        name,
        "slug": page->slug.current,
        ${ImageDataQuery('image')}
      },
      "servicesCta": *[_type == "global" && language == $language][0].footer {
        ${ButtonDataQuery('servicesCta')}
      }.servicesCta,
      "contact": *[_type == "global" && language == $language][0] {
        address {
          addressText,
          mapLink,
        },
        email,
        tel,
      },
      "privacyPolicy": *[_type == "PrivacyPolicy_Page" && language == $language][0] {
        name,
        "slug": slug.current,
      },
      "terms": *[_type == "TermsAndConditions_Page" && language == $language][0] {
        name,
        "slug": slug.current,
      },
    }
  `,
  params: { language: lang },
})
---

<footer class='footer max-width'>
  {shouldShowLanguageSwitcher && <LanguageSwitcher lang={lang} alternates={alternates} class='language-switcher' />}
  <div class='main'>
    <div class='services'>
      <h2 class='heading'>{t.services}</h2>
      {
        data.pillars && data.pillars.length > 0 && (
          <ul class='pillars'>
            {data.pillars.map(({ name, slug, icon }) => (
              <li>
                <a href={slug}>
                  <div class='pillar-icon'>{icon && <Image {...icon} sizes='1rem' />}</div>
                  <span class='pillar-name'>{name}</span>
                </a>
              </li>
            ))}
          </ul>
        )
      }
      {data.servicesCta && <Button {...data.servicesCta} theme='secondary' className='cta' />}
    </div>
    <div class='company'>
      <h2 class='heading'>{t.company}</h2>
      {
        data.links && data.links.length > 0 && (
          <ul class='links'>
            {data.links.map((link) => (
              <li>
                <a href={link.slug}>
                  {link.image && (
                    <div class='link-image'>
                      <Image {...link.image} sizes='2rem' />
                    </div>
                  )}
                  <span>{link.name}</span>
                </a>
              </li>
            ))}
          </ul>
        )
      }
    </div>
    <div class='contact'>
      <h2 class='heading'>{t.contact}</h2>
      <a href={data.contact.address.mapLink} target='_blank' rel='noopener noreferrer' class='address'>
        {data.contact.address.addressText}
      </a>
      <div class='contact-details'>
        <p class='email'>
          <a href={`mailto:${data.contact.email}`}>{data.contact.email}</a>
          <Copy data={data.contact.email} successMessage={t.copyEmailSuccess} />
        </p>
        {
          data.contact.tel && (
            <p class='tel'>
              <a href={`tel:${data.contact.tel}`}>{data.contact.tel}</a>
              <Copy data={data.contact.tel} successMessage={t.copyTelSuccess} />
            </p>
          )
        }
      </div>
    </div>
  </div>
  <div class='credits'>
    <div class='legal'>
      <a href={data.privacyPolicy.slug}>{data.privacyPolicy.name}</a>
      <a href={data.terms.slug}>{data.terms.name}</a>
    </div>
    <Socials class='socials' />
    <p class='copyright'>&copy; {new Date().getFullYear()} Kryptonum</p>
    <div class='blur'></div>
  </div>
</footer>

<style lang='scss'>
  .language-switcher {
    grid-column: 1 / -1;
    margin-bottom: clamp(1rem, calc(2vw / 0.48), 2rem);
  }
  footer {
    padding-top: clamp(3rem, calc(5vw / 0.48), 5rem);
    display: grid;
    gap: clamp(3rem, calc(5vw / 0.48), 5rem);
  }
  .main {
    display: grid;
    grid-template-columns: 2fr 1.5fr 1.5fr;
    gap: clamp(2rem, calc(3vw / 0.48), 3rem);
  }
  .heading {
    font-size: var(--typography-body-2xl, 1.125rem);
    font-weight: 400;
    padding-bottom: 0.75rem;
    margin-bottom: clamp(0.25rem, calc(0.5vw / 0.48), 0.5rem);
  }
  .services {
    grid-column: 1;
    .pillars {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem 1.25rem;
      margin-bottom: clamp(1rem, calc(1.5vw / 0.48), 1.5rem);
      li {
        flex: 1 1 calc(50% - 0.625rem);
        min-width: max-content;
      }
      li a {
        display: grid;
        grid-template-columns: auto 1fr;
        align-items: center;
        gap: 0.75rem;
        padding: 0.625rem 0;
        transition:
          color 500ms var(--easing),
          transform 500ms var(--easing);
        &:hover {
          color: var(--neutral-400, #c6cdcc);
          transform: translateX(0.175rem); //
          .pillar-icon {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.15);
          }
        }
        .pillar-icon {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 2.25rem;
          height: 2.25rem;
          border-radius: 0.5rem;
          background: rgba(255, 255, 255, 0.04);
          border: 1px solid rgba(255, 255, 255, 0.08);
          transition:
            background 500ms var(--easing),
            border-color 500ms var(--easing);
          img {
            width: 1rem;
            height: 1rem;
          }
        }
        .pillar-name {
          font-size: var(--typography-body-l, 1rem);
        }
      }
    }
  }
  .company {
    grid-column: 2;
    .links {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.5rem 1.25rem;
      li a {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 0;
        font-size: var(--typography-body-l, 1rem);
        transition: color 500ms var(--easing);
        &:hover {
          color: var(--neutral-400, #c6cdcc);
          .link-image {
            border-color: rgba(255, 255, 255, 0.2);
          }
        }
        .link-image {
          flex-shrink: 0;
          width: 2rem;
          height: 2rem;
          border-radius: 50%;
          overflow: hidden;
          border: 1px solid rgba(255, 255, 255, 0.1);
          transition: border-color 500ms var(--easing);
          img {
            width: 100%;
            height: 100%;
            object-fit: cover;
          }
        }
      }
    }
  }
  .contact {
    grid-column: 3;
    .address {
      display: block;
      font-size: var(--typography-body-m, 0.875rem);
      color: var(--neutral-400, #c6cdcc);
      line-height: 1.6;
      margin-bottom: clamp(1rem, calc(1.5vw / 0.48), 1.5rem);
      transition: color 500ms var(--easing);
      &:hover {
        color: var(--neutral-200, #f0f7f7);
      }
    }
    .contact-details {
      margin-bottom: clamp(1.5rem, calc(2vw / 0.48), 2rem);
    }
    .email,
    .tel {
      display: flex;
      align-items: center;
      gap: 0.625rem;
      a {
        font-size: var(--typography-body-m, 0.875rem);
        padding: 0.5rem 0;
        transition: color 500ms var(--easing);
        &:hover {
          color: var(--neutral-400, #c6cdcc);
        }
      }
    }
    .tel {
      margin-top: 0.375rem;
    }
  }
  .credits {
    font-size: var(--typography-body-m, 0.875rem);
    padding: clamp(1rem, calc(1.5vw / 0.48), 1.5rem) 0 5rem;
    background:
      linear-gradient(var(--neutral-900), var(--neutral-900)) padding-box,
      linear-gradient(266deg, rgba(5, 67, 45, 0.4), rgba(5, 80, 53, 0.4), #1f6644, rgba(17, 53, 49, 0.2)) border-box;
    border-top: 1px solid rgba(0, 0, 0, 0);
    display: grid;
    gap: 1.5rem;
    align-items: center;
    grid-template-columns: 1fr 1fr 1fr;
    color: var(--neutral-400, #c6cdcc);
    position: relative;
    z-index: 1;
    .blur {
      overflow: hidden;
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      height: 100%;
      z-index: -1;
      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate3d(-50%, -50%, 0);
        width: 80%;
        max-width: 23.5rem;
        aspect-ratio: 1/1;
        border-radius: 50%;
        background: var(--primary-gradient-900);
        mix-blend-mode: plus-lighter;
        filter: blur(64px);
      }
    }
    a {
      transition: color 500ms var(--easing);
      &:hover {
        color: var(--neutral-200, #f0f7f7);
      }
    }
    .legal {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem 1.5rem;
    }
    .socials {
      justify-content: center;
    }
    .copyright {
      text-align: right;
    }
    @media (max-width: 56rem) {
      grid-template-columns: 1fr auto;
      .socials {
        justify-content: flex-end;
      }
      .copyright {
        grid-column: 3/1;
        text-align: left;
      }
    }
    @media (max-width: 36rem) {
      grid-template-columns: 1fr 6.25rem;
      align-items: flex-start;
      .legal {
        margin-top: 1rem;
      }
    }
  }
  @media (max-width: 75rem) {
    .company .links {
      grid-template-columns: 1fr;
    }
  }
  @media (max-width: 56rem) {
    .main {
      grid-template-columns: 1fr 1fr;
      gap: clamp(2rem, calc(3vw / 0.48), 3rem);
    }
    .services {
      grid-column: 1 / -1;
    }
    .company {
      grid-column: 1;
    }
    .contact {
      grid-column: 2;
    }
  }
  @media (max-width: 31.25rem) {
    .main {
      grid-template-columns: 1fr;
      gap: clamp(2rem, calc(3vw / 0.48), 3rem);
    }
    .services,
    .company,
    .contact {
      grid-column: 1;
    }
    .services .pillars li {
      flex: 1 1 100%;
    }
  }
  :global(body:has(.ScrollToNextPage)) {
    footer .credits .blur {
      height: 200%;
    }
  }
</style>
