{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".vercel/**"]
    },
    "astro-www#build": {
      "outputs": ["dist/**", ".vercel/**"],
      "env": ["MAILERLITE_API_KEY", "RESEND_API_KEY"]
    },
    "@repo/shared#build": {
      "outputs": []
    },
    "@repo/ui#build": {
      "outputs": []
    },
    "@repo/utils#build": {
      "outputs": [],
      "env": ["SANITY_API_TOKEN"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
