---
import sanityFetch from '@repo/utils/sanity.fetch'
import Socials from '@repo/ui/Socials'
import Image, { ImageDataQuery, type ImageDataProps } from '@repo/ui/Image'
import Copy from '@repo/ui/Copy'
import { getLocaleFromPath } from '@repo/utils/get-locale-from-path'

const language = getLocaleFromPath(Astro.url.pathname)

const data = await sanityFetch<{
  services: {
    name: string
    slug: string
    icon: ImageDataProps
    list: {
      name: string
      slug: string
    }[]
  }[]
  caseStudies: {
    name: string
    slug: string
    list: {
      name: string
      slug: string
    }[]
  }
  blog: {
    name: string
    slug: string
  }
  team: {
    name: string
    link: string
    members: {
      name: string
      slug: string
      img: ImageDataProps
    }[]
  }
  contact: {
    address: {
      addressText: string
      mapLink: string
    }
    email: string
    tel?: string
  }
  locationPages: {
    name: string
    slug: string
  }[]
}>({
  query: `
    {
      "services": *[_type == "Service_Collection" && !defined(mainPage) && language == $language] | order(_createdAt asc) {
        name,
        "slug": slug.current,
        ${ImageDataQuery('icon')}
        "list": *[_type == "Service_Collection" && mainPage._ref == ^._id && language == $language] | order(_createdAt asc) {
          name,
          "slug": slug.current,
        }
      },
      "caseStudies": *[_type == "Portfolio_Page" && language == $language][0] {
        name,
        "slug": slug.current,
        "list": coalesce(
          *[_type == "global" && language == $language][0].footer.caseStudies[] -> {
            name,
            "slug": slug.current,
          },
          *[_type == "CaseStudy_Collection" && language == $language][] | order(_createdAt desc)[0...4] {
            name,
            "slug": slug.current,
          },
        ),
      },
      "blog": *[_type == "Blog_Page" && language == $language][0] {
        name,
        "slug": slug.current,
      },
      "team": *[_type == "Team_Page" && language == $language][0] {
        name,
        "link": slug.current,
        "members": *[_type == "TeamMember_Collection" && language == $language][] | order(_createdAt asc) {
          name,
          "slug": slug.current,
          ${ImageDataQuery('img')}
        }
      },
      "contact": *[_type == "global" && language == $language][0] {
        address {
          addressText,
          mapLink,
        },
        email,
        tel,
      },
      "locationPages": *[_type == "Location_Collection" && language == $language][] | order(name asc) {
        name,
        "slug": slug.current,
      }
    }
  `,
  params: { language: language },
})

const cities = [
  { name: 'Szczecin', left: '7.35%', top: '17.24%', pages: [] },
  { name: 'Gdańsk', left: '40.27%', top: '6.1%', pages: [] },
  { name: 'Olsztyn', left: '62.66%', top: '18.59%', pages: [] },
  { name: 'Białystok', left: '86.5%', top: '30.05%', pages: [] },
  { name: 'Poznań', left: '26.65%', top: '33.46%', pages: [] },
  { name: 'Warszawa', left: '64.27%', top: '43.24%', initial: true, pages: [] },
  { name: 'Wrocław', left: '26.18%', top: '51.03%', pages: [] },
  { name: 'Kraków', left: '46.06%', top: '66.22%', pages: [] },
  { name: 'Rzeszów', left: '75.10%', top: '75.68%', pages: [] },
]
  .map((city) => {
    const cityPages = data.locationPages.filter((page) => page.name.includes(city.name))
    return {
      ...city,
      pages: cityPages.map((page) => ({ name: page.name, slug: page.slug })),
    }
  })
  .filter((city) => city.pages.length > 0)
---

<footer class="footer max-width">
  <div class="services">
    {
      data.services.map(({ name, slug, icon, list }) => (
        <div>
          <a href={slug}>
            {icon && <Image {...icon} sizes="16px" />}
            {name}
          </a>
          <ul>
            {list.map(({ name, slug }) => (
              <li>
                <a href={slug}>{name}</a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
  <div class="caseStudies">
    <a href={data.caseStudies.slug}>{data.caseStudies.name}</a>
    <ul>
      {
        data.caseStudies.list.map(({ name, slug }) => (
          <li>
            <a href={slug}>{name}</a>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="teamAndBlog">
    <div class="team">
      <a href={data.team.link}>{data.team.name}</a>
      <ul>
        {
          data.team.members.map(({ name, slug, img }) => (
            <li>
              <a href={slug}>
                <Image {...img} sizes="32px" class="gradient-thumbnail" />
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="blog">
      <a href={data.blog.slug}>{data.blog.name}</a>
    </div>
  </div>
  <div class="contact">
    <a href={data.contact.address.mapLink} target="_blank" rel="noopener noreferrer" class="address">
      {data.contact.address.addressText}
    </a>
    <p class="email">
      <a href={`mailto:${data.contact.email}`}>{data.contact.email}</a>
      <Copy data={data.contact.email} successMessage="Pomyślnie skopiowano adres e-mail" />
    </p>
    {
      data.contact.tel && (
        <p class="tel">
          <a href={`tel:${data.contact.tel}`}>{data.contact.tel}</a>
          <Copy data={data.contact.tel} successMessage="Pomyślnie skopiowano numer telefonu" />
        </p>
      )
    }
  </div>
