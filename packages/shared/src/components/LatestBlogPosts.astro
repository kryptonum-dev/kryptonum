---
import PortableText, { PortableTextQuery, type PortableTextValue } from '@repo/ui/portable-text'
import Button, { ButtonDataQuery, type ButtonDataProps } from '@repo/ui/Button'
import BlogCard, { BlogCard_Query, type Props as BlogCardProps } from '@apps/www/components/shared/BlogCard.astro'

export const LatestBlogPosts_Query = `
  _type == "LatestBlogPosts" => {
    ${PortableTextQuery('heading')}
    ${ButtonDataQuery('cta')}
    "posts": select(posts != null =>
      posts[] -> {
        ${BlogCard_Query}
      },
      *[_type == "BlogPost_Collection" && language == $language] | order(coalesce(publishedDate, _createdAt) desc)[0...2] {
        ${BlogCard_Query}
      },
    ),
  },
`

type Props = {
  index: number
  sectionId?: string
  heading: PortableTextValue
  cta?: ButtonDataProps
  posts: Array<BlogCardProps>
}

const { index, sectionId, heading, cta, posts } = Astro.props

const hasExtendedPosts = posts.length > 2
const hasShowMore = posts.length > 6
---

<section class='LatestBlogPosts' id={sectionId} data-extended={hasExtendedPosts} data-has-show-more={hasShowMore}>
  <header>
    <PortableText value={heading} heading={index === 0 ? 'h1' : 'h2'} class='heading h2' />
    {cta && <Button {...cta} />}
  </header>
  <div class='posts-list-upper'>
    {
      posts.slice(0, 2).map(({ img, name, slug, content }, i) => (
        <BlogCard
          {...{
            img,
            name,
            slug,
            content,
            imgProps: {
              sizes: '(max-width: 46rem) 100vw, 40vw',
              priority: index === 0 && i === 0,
              loading: index === 0 ? 'eager' : 'lazy',
            },
          }}
        />
      ))
    }
  </div>
  <div class='posts-list-middle'>
    {
      posts.slice(2, 6).map(({ img, name, slug, content }, i) => (
        <BlogCard
          {...{
            img,
            name,
            slug,
            content,
            imgProps: {
              sizes: '(max-width: 46rem) 100vw, 40vw',
              priority: false,
              loading: 'lazy',
            },
          }}
        />
      ))
    }
  </div>
  <div class='posts-list-lower' data-expanded='false'>
    {
      posts.slice(6).map(({ img, name, slug, content }, i) => (
        <BlogCard
          {...{
            img,
            name,
            slug,
            content,
            imgProps: {
              sizes: '(max-width: 46rem) 100vw, 40vw',
              priority: false,
              loading: 'lazy',
            },
          }}
        />
      ))
    }
  </div>
  {
    hasShowMore && (
      <div class='show-more-wrapper' data-expanded='false'>
        <div class='gradient-overlay' />
        <Button theme='primary' className='show-more-btn'>
          Zobacz więcej wpisów
        </Button>
        <Button theme='primary' className='show-less-btn'>
          Pokaż mniej
        </Button>
      </div>
    )
  }
</section>

<script>
  function initShowMore() {
    const sections = document.querySelectorAll('.LatestBlogPosts[data-has-show-more="true"]')

    sections.forEach((section) => {
      const showMoreBtn = section.querySelector('.show-more-btn') as HTMLButtonElement
      const showLessBtn = section.querySelector('.show-less-btn') as HTMLButtonElement
      const lowerList = section.querySelector('.posts-list-lower') as HTMLElement
      const gradientOverlay = section.querySelector('.gradient-overlay') as HTMLElement
      const wrapper = section.querySelector('.show-more-wrapper') as HTMLElement

      if (!showMoreBtn || !showLessBtn || !lowerList || !wrapper) return

      showMoreBtn.addEventListener('click', () => {
        wrapper.setAttribute('data-expanded', 'true')
        lowerList.setAttribute('data-expanded', 'true')
        lowerList.removeAttribute('inert')
        if (gradientOverlay) gradientOverlay.setAttribute('data-visible', 'false')
      })

      showLessBtn.addEventListener('click', () => {
        wrapper.setAttribute('data-expanded', 'false')
        lowerList.setAttribute('data-expanded', 'false')
        lowerList.setAttribute('inert', '')
        if (gradientOverlay) gradientOverlay.setAttribute('data-visible', 'true')

        const middleList = section.querySelector('.posts-list-middle')
        if (middleList) {
          setTimeout(() => {
            middleList.scrollIntoView({ behavior: 'smooth', block: 'nearest' })
          }, 100)
        }
      })

      lowerList.setAttribute('inert', '')
    })
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initShowMore)
  } else {
    initShowMore()
  }
</script>

<style lang='scss'>
  .LatestBlogPosts {
    padding: clamp(2rem, calc(4vw / 0.48), 5rem) 0;
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-template-rows: auto auto auto 1fr;
    grid-template-areas:
      'header posts-list-upper'
      'empty posts-list-middle'
      'empty posts-list-lower'
      'empty button';

    align-items: center;
    gap: 1.25rem;

    &[data-extended='true'] {
      align-items: start;

      > header {
        position: sticky;
        top: 7.6875rem;
      }
    }

    > header {
      display: grid;
      gap: clamp(1rem, calc(3vw / 0.48), 3rem);
      justify-items: flex-start;
      align-self: center;
    }

    .posts-list-upper,
    .posts-list-middle,
    .posts-list-lower {
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: stretch;
      gap: clamp(0.75rem, calc(1vw / 0.48), 1.25rem);
    }

    .posts-list-upper {
      grid-area: posts-list-upper;
    }

    .posts-list-middle {
      grid-area: posts-list-middle;
    }

    .posts-list-lower {
      position: relative;
      max-height: 5rem;
      overflow: hidden;
      opacity: 0.6;
      transition:
        max-height 400ms var(--easing),
        transform 400ms var(--easing),
        opacity 400ms var(--easing);
      pointer-events: none;
      grid-area: posts-list-lower;

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, transparent 0%, var(--neutral-900, #000103) 50%);
        pointer-events: none;
        transition: opacity 300ms var(--easing);
      }

      &[data-expanded='true'] {
        max-height: 625rem;
        transform: translateY(0);
        opacity: 1;
        pointer-events: auto;

        &::after {
          opacity: 0;
          pointer-events: none;
        }
      }
    }

    .show-more-wrapper {
      position: relative;
      display: grid;
      place-items: center;
      margin-top: clamp(1rem, calc(2vw / 0.48), 2rem);
      grid-area: button;

      .show-more-btn,
      .show-less-btn {
        :global(svg) {
          transform: rotate(90deg);
        }
      }

      .show-more-btn {
        display: inline-flex;
      }

      .show-less-btn {
        display: none;
      }

      &[data-expanded='true'] {
        .show-more-btn {
          display: none;
        }

        .show-less-btn {
          display: inline-flex;

          :global(svg) {
            transform: rotate(-90deg);
          }
        }
      }
    }

    .gradient-overlay {
      position: absolute;
      bottom: 100%;
      left: 0;
      right: 0;
      height: clamp(6rem, calc(10vw / 0.48), 10rem);
      background: linear-gradient(180deg, transparent 0%, var(--neutral-900, #000103) 85%);
      pointer-events: none;
      opacity: 1;
      transition: opacity 400ms var(--easing);

      &[data-visible='false'] {
        opacity: 0;
      }
    }

    @media (max-width: 66rem) {
      max-width: 38rem;
      margin: 0 auto;
      grid-template-columns: 1fr;
      grid-template-areas: 'header' 'posts-list-upper' 'posts-list-middle' 'posts-list-lower' 'button';

      > header {
        align-items: flex-start;
        grid-template-columns: 1fr auto;
        margin-bottom: clamp(1.25rem, calc(3vw / 0.48), 3rem);
      }

      &[data-extended='true'] {
        header {
          position: static;
        }
      }
    }

    @media (max-width: 46rem) {
      > header {
        gap: 0.75rem;
        grid-template-columns: 1fr;
      }

      .posts-list-upper,
      .posts-list-middle,
      .posts-list-lower {
        grid-template-columns: 1fr;
      }
    }
  }
</style>
