{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "dist",
    "module": "ES2015",
    "moduleResolution": "bundler",
    "target": "ES2015",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@repo/shared/*": ["../../packages/shared/src/*"],
      "@repo/utils/*": ["../../packages/utils/src/*"],
      "@repo/ui/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
